" Interface
syntax on
set wildmenu
set number
set laststatus=2
set visualbell
set wrap

" Searching
set incsearch
set ignorecase
set smartcase
set hlsearch

" Indentation
set tabstop=4
set shiftwidth=4
set expandtab
set autoindent
set smartindent

" Navigation
nnoremap j gj
nnoremap k gk

nnoremap <S-h> gT
nnoremap <S-l> gt

nnoremap <S-j> 5gj
nnoremap <S-k> 5gk

nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l
